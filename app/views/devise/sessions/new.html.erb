<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mail-address">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="password">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="login_checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label "ログイン情報を記憶する", style: "font-weight:normal;" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary col-md-12", style: "margin-top: 15px; margin-bottom: 20px;" %>
    </div>

    <div class="center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規ユーザー登録はこちら", new_registration_path(resource_name) , class: "col-md-5 user_unregistered" %>
      <% end %>
      
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "facebook認証でログイン", omniauth_authorize_path(resource_name, provider) , class: "col-md-5 col-md-offset-2 facebook" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
